<script type="text/javascript">

$('#goButton').click( function() {
	var myHashtag = $('#hashtagSearch').val();
	JQTWEET.search = myHashtag;
	JQTWEET.loadTweets();
	hide('inputPromptTwt'); 
});
function hide(name){
	var div = document.getElementById(name);
    div.style.display = 'none'; 
};

</script>
